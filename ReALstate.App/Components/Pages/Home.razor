@page "/"

<MudGrid Class="my-3" Spacing="3">
    @for(int i = 0; i < 7; i++)
    {
        <MudItem xs="12" md="4" lg="3">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">The Story Book</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>This day everything happened.</MudText>
                    <MudText Typo="Typo.body2">The quick, brown fox jumps over a lazy dog.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Read More</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
    <MudItem xs="12" md="4" lg="3">
        <MudPaper Class="d-flex align-center justify-center mud-width-full mud-height-full py-8 cursor-pointer">
            <MudIcon Icon="@Icons.Material.Filled.AddCircleOutline" Size="Size.Large"></MudIcon>
        </MudPaper>
    </MudItem>

</MudGrid>